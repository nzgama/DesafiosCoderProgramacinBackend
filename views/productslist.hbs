{{> navbar}}
<br />

<table style="border: #b2b2b2 1px solid;">
    <caption>Listado de productos</caption>
    <thead>
        <tr>
            <th><strong>ID</strong></th>
            <th><strong>Title</strong></th>
            <th><strong>Price</strong></th>
            <th><strong>Thumbnail</strong></th>
        </tr>
    </thead>

    {{#each products}}
    <tr>
        <td>{{this.id}}</td>
        <td>{{this.title}}</td>
        <td>$ {{this.price}}</td>
        <td><img src="{{this.thumbnail}}" class="product-img" width="100" height="100"/></td>
    </tr>
    {{/each}}
</table>


